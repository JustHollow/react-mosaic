{
  "name": "react-mosaic-component",
  "version": "2.0.2",
  "description": "A React Tiling Window Manager",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "style": "lib/react-mosaic.css",
  "typings": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/JustHollow/react-mosaic.git"
  },
  "scripts": {
    "build": "npm-run-all clean build:ts build:less",
    "build:ts": "tsc -p tsconfig-build.json",
    "build:less": "lessc --source-map styles/index.less react-mosaic-component.css",
    "bundle": "rm -rf docs/ && webpack --config webpack/bundle.ts",
    "clean": "rm -rf lib/",
    "start": "webpack-dev-server --config webpack/hot.ts",
    "test": "npm-run-all build test:lint test:unit test:format",
    "test:circle": "npm-run-all build test:lint test:unit:circle test:format",
    "test:lint": "tslint -c tslint.yml -p tsconfig.json -e test",
    "test:lint:fix": "yarn run test:lint --fix",
    "test:unit": "mocha --opts test/mocha.opts 'test/*.ts'",
    "test:unit:circle": "mocha --opts test/mocha.opts --reporter mocha-junit-reporter 'test/*.ts'",
    "test:format": "prettier --list-different 'styles/*.less' '*.md'",
    "test:format:fix": "prettier --write 'styles/*.less' '*.md'",
    "fix": "npm-run-all test:lint:fix test:format:fix",
    "version": "npm run bundle && git add -A docs/"
  },
  "devDependencies": {
    "@blueprintjs/core": "^3.13.0",
    "@blueprintjs/icons": "^3.6.0",
    "@types/chai": "^4.1.7",
    "@types/classnames": "^2.2.7",
    "@types/dom4": "^2.0.1",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/immutability-helper": "^2.6.3",
    "@types/lodash": "^4.14.121",
    "@types/mocha": "^5.2.6",
    "@types/prop-types": "^15.5.9",
    "@types/react": "^16.8.3",
    "@types/react-dom": "^16.8.2",
    "@types/react-hot-loader": "^4.1.0",
    "@types/uuid": "^3.4.4",
    "@types/webpack": "^4.4.24",
    "chai": "^4.2.0",
    "css-loader": "^2.1.0",
    "file-loader": "^3.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jsdom": "^13.2.0",
    "jsdom-global": "^3.0.2",
    "less": "^3.9.0",
    "less-loader": "^4.1.0",
    "mocha": "^6.0.0",
    "mocha-junit-reporter": "^1.18.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "react": "^16.8.2",
    "react-addons-css-transition-group": "^15.6.2",
    "react-dom": "^16.8.2",
    "react-hot-loader": "^4.7.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3",
    "webpack": "^4.29.5",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "immutability-helper": "^3.0.0",
    "lodash": "^4.17.11",
    "prop-types": "^15.7.2",
    "react-dnd": "^7.0.2",
    "react-dnd-html5-backend": "^7.0.2",
    "uuid": "^3.3.2"
  },
  "peerDependencies": {
    "react": "^16.3.0"
  },
  "keywords": [
    "ui",
    "palantir",
    "react",
    "component",
    "typescript",
    "tiling-window-manager",
    "window-manager"
  ]
}
